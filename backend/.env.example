# =============================================================================
# JOBGATE CAREER QUEST - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Set to True to use PostgreSQL, False for SQLite
USE_POSTGRESQL=False

# PostgreSQL Configuration (only used if USE_POSTGRESQL=True)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=jobgate_career_quest
DB_USER=jobgate_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Test Database (PostgreSQL)
DB_TEST_NAME=test_jobgate_career_quest

# =============================================================================
# CONNECTION POOLING SETTINGS
# =============================================================================
# Basic Connection Settings
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True

# PostgreSQL Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=5
DB_POOL_RECYCLE=300
DB_POOL_PRE_PING=True

# Connection Limits
DB_MAX_CONNS=20
DB_MIN_CONNS=5

# =============================================================================
# ALLOWED HOSTS
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=True

# =============================================================================
# PRODUCTION SETTINGS (Override for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=False
# USE_POSTGRESQL=True
# SECRET_KEY=your-super-secure-production-secret-key
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DB_PASSWORD=your-super-secure-production-password

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Cache settings (optional)
# CACHE_BACKEND=redis
# REDIS_URL=redis://localhost:6379/1

# Static files (production)
# STATIC_ROOT=/var/www/jobgate/static/
# MEDIA_ROOT=/var/www/jobgate/media/
